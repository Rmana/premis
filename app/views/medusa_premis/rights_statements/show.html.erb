<p id="notice"><%= notice %></p>

<div class="row">

    <div id="content" class="span9 show-document">

        <%= render 'catalog/previous_next_doc' %>


        <% @page_title = t('Premis Admin Show', :application_name => application_name) %>
        <% extra_head_content << render_link_rel_alternates %>


        <%# this should be in a partial -%>
        <div id="document" class="<%= render_document_class %>">
            <div id="doc_<%= @medusa_premis_rights_statement.id.to_s.parameterize %>">


                <% # bookmark/folder functions -%>


                <div class="document">
                    <p>
                        <b>Id:</b>
                        <%= @medusa_premis_rights_statement.id %>
                    </p>
                    <p>
                        <b>Rights Statement Identifier Type:</b>
                    <ul>
                        <%- @medusa_premis_rights_statement.identifierType.each do |type| %>
                            <li><%= type %></li>
                        <%- end %>
                    </ul>
                    </p>

                    <p>
                        <b>Rights Statement Identifier Value:</b>
                    <ul>
                        <%- @medusa_premis_rights_statement.identifierValue.each do |value| %>
                            <li><%= value %></li>
                        <%- end %>
                    </ul>
                    </p>
                </div>


            </div>
        </div>



        <% if @medusa_premis_rights_statement.respond_to?(:export_as_openurl_ctx_kev) %>
            <!--
                 // COinS, for Zotero among others.
                 // This document_partial_name(@document) business is not quite right,
                 // but has been there for a while.
            -->
            <span class="Z3988" title="<%= @medusa_premis_rights_statement.export_as_openurl_ctx_kev(document_partial_name(@medusa_premis_rights_statement)) %>"></span>
        <% end %>

    </div>

    <div id="sidebar" class="span3">

    </div><!--/span -->
</div>

<%= link_to 'Edit', edit_medusa_premis_rights_statement_path(@medusa_premis_rights_statement) %> |
<%= link_back_to_catalog(:label=>'Back to Search') %>